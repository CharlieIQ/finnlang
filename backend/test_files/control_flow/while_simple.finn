// Test simple while loops

// Basic counting
let counter = 0;
while (counter < 5) {
    woof("Counter: " + counter);
    counter = counter + 1;
}

// Countdown
let countdown = 5;
while (countdown > 0) {
    woof("Countdown: " + countdown);
    countdown = countdown - 1;
}
woof("Blast off!");

// Sum calculation
let sum = 0;
let i = 1;
while (i <= 10) {
    sum = sum + i;
    i = i + 1;
}
woof("Sum of 1-10: " + sum);

// Boolean condition
let found = false;
let search = 0;
while (!found) {
    if (search == 7) {
        found = true;
        woof("Found the number 7!");
    }
    search = search + 1;
}
